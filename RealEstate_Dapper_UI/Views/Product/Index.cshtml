@model List<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Kategori Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Image</th>
								<th scope="col">Ürün Adı</th>
								<th scope="col">Fiyat</th>
								<th scope="col">Şehir</th>
								<th scope="col">Semt</th>
								<th scope="col">Adres</th>
								<th scope="col">Durum</th>
								<th scope="col">Kategori</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<th scope="row">@item.ProductId</th>
									<td><img class="img-fluid" style="height: 100px;width: 200px;" src="@item.CoverImage" alt="img"></td>
									<td>@item.Title</td>
									<td>@item.Price</td>
									<td>@item.City</td>
									<td>@item.District</td>
									<td>@item.Address</td>
									<td>@item.Type</td>
									<td>@item.CategoryName</td>
									<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
									<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Product/CreateProduct" class="btn btn-primary" style="float: right;">Yeni Ürün Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>


